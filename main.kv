<MyLayout>
    FloatLayout:
        size: (root.width, root.height)
        orientation: 'vertical'
        Carousel:
            id: my_carousel
            on_touch_up: root.pages()
            direction: 'right'
            pos_hint: {'center_x': .5, 'center_y': .45}
            size_hint: .9, .9
        Label:
            id: title
            pos_hint: {'center_x': .5, 'center_y': .95}
        Label:
            id: author
            pos_hint: {'center_x': .5, 'center_y': .91}
        Label:
            id: tags
            halign: 'center'
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
            pos_hint: {'center_x': .5, 'center_y': .86}
        Label:
            id: pages
            pos_hint: {'center_x': .5, 'center_y': .05}
        Button:
            text: "Random"
            size_hint: (.18, .06)
            pos_hint: {'center_x': .87, 'center_y': .05}
            on_press: root.press()
        Button:
            text: "Copy link"
            id: clip
            size_hint: (.18, .06)
            pos_hint: {'center_x': .14, 'center_y': .05}
            on_press: root.copy()
        Button:
            text: "Settings"
            size_hint: (.18, .06)
            pos_hint: {'center_x': .68, 'center_y': .05}
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'screen_two'
<Settings>:
    FloatLayout:
        Button:
            size_hint: (.18, .06)
            pos_hint: {'center_x': .14, 'center_y': .92}
            text: "Back"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'screen_one'
                root.prit()
        LinkEditor:
            id: inputEX
            in_ex: 'exclusions'
            size_hint: (.7, .2)
            pos_hint: {'center_x': .5, 'center_y': .65}
        Label:
            text: "Exclusions"
            pos_hint: {'center_x': .5, 'center_y': .77}
        LinkEditor:
            id: inputIN
            in_ex: 'inclusions'
            size_hint: (.7, .2)
            pos_hint: {'center_x': .5, 'center_y': .35}
        Label:
            text: "Inclusions"
            pos_hint: {'center_x': .5, 'center_y': .47}